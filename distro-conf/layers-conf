# U2UP base layers:
U2UP_BASE_LAYERS="meta meta-poky meta-yocto-bsp"

# Base layers - needed:
meta_LAYER_NAME="meta"
meta_LAYER_REPO="poky"
meta_LAYER_PATH="${U2UP_REPOS_DIR}/poky_${poky_REPO_BRANCH}/${meta_LAYER_NAME}"

meta_poky_LAYER_NAME="meta-poky"
meta_poky_LAYER_REPO="poky"
meta_poky_LAYER_PATH="${U2UP_REPOS_DIR}/poky_${poky_REPO_BRANCH}/${meta_poky_LAYER_NAME}"

meta_yocto_bsp_LAYER_NAME="meta-yocto-bsp"
meta_yocto_bsp_LAYER_REPO="poky"
meta_yocto_bsp_LAYER_PATH="${U2UP_REPOS_DIR}/poky_${poky_REPO_BRANCH}/${meta_yocto_bsp_LAYER_NAME}"

